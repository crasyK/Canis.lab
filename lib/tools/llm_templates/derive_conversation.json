{
    "step": {
        "name": "derive",
        "data_markers": {
            "in": {"context":"str","num_conversations":"str","num_turns":"str","ai_role":"str","user_role":"str"},
            "out": {"derived_data":"str"}
        }
    },
    "call": {
        "custom_id": "{index}",
        "method": "POST",
        "url": "/v1/responses",
        "body": {
            "model": "gpt-5-mini",
            "input": [
                {"role": "system", "content": "From the following context, derive {num_conversations} conversation(s) of {ai_role} and {user_role} of {num_turns} turns."},
                {"role": "user", "content": "{context}"}
            ]
        }
    }
}