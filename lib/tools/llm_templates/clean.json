{
    "step": {
        "name": "clean",
        "data_markers": {
            "in":  {"__criteria_verbose__":"str","__criteria_array__":"list","__dirty_data__":"str"},
            "out": {"data_classification":"json_data"}
        }
    },
    "call": {
        "custom_id": "__index__",
        "method": "POST",
        "url": "/v1/responses",
        "body": {
            "model": "gpt-5",
            "input": [
                {"role": "system", "content": "Decide if following data fullfills the following criteria: __criteria__. Return a JSON object with the following fields: 'status' (select one of __criteria_array__ according to the criteria)"},
                {"role": "user", "content": "__dirty_data__"}
            ],
            "text": {
                "format": {
                    "response_format": {
                    "type": "json_schema",
                    "json_schema": {
                        "name": "data_classification",
                        "strict": true,
                        "schema": {
                        "type": "object",
                        "properties": {
                            "status": {
                            "type": "string",
                            "description": "Classification status of the data.",
                            "enum": __criteria_array__
                            }
                        },
                        "required": ["status"],
                        "additionalProperties": false
                        }
                    }
                    }
                }
            }
        }
    }
}
